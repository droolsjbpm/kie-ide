<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>tomcat7</id>
  <formats>
    <format>zip</format>
    <format>dir</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/main/assembly/resources/tomcat-shared/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <fileMode>775</fileMode>
      <filtered>true</filtered>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/assembly/resources/tomcat-shared/conf</directory>
      <outputDirectory>conf</outputDirectory>
      <fileMode>664</fileMode>
      <filtered>true</filtered>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/assembly/resources/tomcat7/conf</directory>
      <outputDirectory>conf</outputDirectory>
      <fileMode>664</fileMode>
      <filtered>true</filtered>
    </fileSet>
  </fileSets>
  <dependencySets> 
    <dependencySet>
      <includes>
        <include>org.kie:kie-tomcat-integration:jar</include>
        <include>org.codehaus.btm:btm:jar</include>
        <include>org.codehaus.btm:btm-tomcat55-lifecycle:jar</include>
        <include>com.h2database:h2:jar</include>
        <include>org.jboss.spec.javax.transaction:jboss-transaction-api_1.1_spec:jar</include>
        <include>org.jboss.spec.javax.security.jacc:jboss-jacc-api_1.4_spec:jar</include>
        <include>org.slf4j:slf4j-api:jar</include>
        <include>org.slf4j:slf4j-jdk14:jar</include>
      </includes>
      <outputDirectory>lib</outputDirectory>
    </dependencySet>
  </dependencySets>

</assembly>
