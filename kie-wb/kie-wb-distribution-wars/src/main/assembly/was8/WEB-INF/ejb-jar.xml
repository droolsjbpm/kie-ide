<ejb-jar id="ejb-jar_ID" version="3.1"
      xmlns="http://java.sun.com/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                          http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd">

  <enterprise-beans>
    <session>
      <ejb-name>EJBTimerScheduler</ejb-name>
      <ejb-class>org.jbpm.services.ejb.timer.EJBTimerScheduler</ejb-class>
      <session-type>Singleton</session-type>
      <!-- override default container managed transaction -->
      <transaction-type>Bean</transaction-type>
    </session>
    <message-driven>
      <ejb-name>KieSessionRequesMessageBean</ejb-name>
      <ejb-class>org.kie.remote.services.jms.RequestMessageBean</ejb-class>
      <transaction-type>Bean</transaction-type>
      <activation-config>
        <activation-config-property>
          <activation-config-property-name>destinationType</activation-config-property-name>
          <activation-config-property-value>javax.jms.Queue</activation-config-property-value>
        </activation-config-property>
        <activation-config-property>
          <activation-config-property-name>destination</activation-config-property-name>
          <activation-config-property-value>jms/KIE.SESSION</activation-config-property-value>
        </activation-config-property> 
      </activation-config>
    </message-driven>  
    <message-driven>
      <ejb-name>TaskServiceRequesMessageBean</ejb-name>
      <ejb-class>org.kie.remote.services.jms.RequestMessageBean</ejb-class>
      <transaction-type>Bean</transaction-type>
      <activation-config>
        <activation-config-property>
          <activation-config-property-name>destinationType</activation-config-property-name>
          <activation-config-property-value>javax.jms.Queue</activation-config-property-value>
        </activation-config-property>
        <activation-config-property>
          <activation-config-property-name>destination</activation-config-property-name>
          <activation-config-property-value>jms/KIE.TASK</activation-config-property-value>
        </activation-config-property> 
      </activation-config>
    </message-driven>  
    <message-driven>
      <ejb-name>JMSAuditProcessor</ejb-name>
      <ejb-class>org.jbpm.services.cdi.impl.audit.AuditJMSProcessor</ejb-class>
      <transaction-type>Container</transaction-type>
      <activation-config>
        <activation-config-property>
          <activation-config-property-name>destinationType</activation-config-property-name>
          <activation-config-property-value>javax.jms.Queue</activation-config-property-value>
        </activation-config-property>
        <activation-config-property>
          <activation-config-property-name>destination</activation-config-property-name>
          <activation-config-property-value>jms/KIE.AUDIT</activation-config-property-value>
        </activation-config-property> 
        <activation-config-property>
          <activation-config-property-name>maxSession</activation-config-property-name>
          <activation-config-property-value>1</activation-config-property-value>
        </activation-config-property> 
      </activation-config>
    </message-driven>
    <message-driven>
      <ejb-name>JmsAvailableJobsExecutor</ejb-name>
      <ejb-class>org.jbpm.executor.cdi.impl.jms.JmsAvailableJobsExecutorCDIImpl</ejb-class>
      <transaction-type>Bean</transaction-type>
      <activation-config>
        <activation-config-property>
          <activation-config-property-name>destinationType</activation-config-property-name>
          <activation-config-property-value>javax.jms.Queue</activation-config-property-value>
        </activation-config-property>
        <activation-config-property>
          <activation-config-property-name>destination</activation-config-property-name>
          <activation-config-property-value>jms/KIE.EXECUTOR</activation-config-property-value>
        </activation-config-property>
      </activation-config>
    </message-driven>
    <message-driven>
      <ejb-name>JMSSignalReceiver</ejb-name>
      <ejb-class>org.jbpm.process.workitem.jms.JMSSignalReceiver</ejb-class>
      <transaction-type>Bean</transaction-type>
      <activation-config>
        <activation-config-property>
          <activation-config-property-name>destinationType</activation-config-property-name>
          <activation-config-property-value>javax.jms.Queue</activation-config-property-value>
        </activation-config-property>
        <activation-config-property>
          <activation-config-property-name>destination</activation-config-property-name>
          <activation-config-property-value>jms/KIE.SIGNAL</activation-config-property-value>
        </activation-config-property>
      </activation-config>
    </message-driven>
  </enterprise-beans>
</ejb-jar>
