<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.kie.smoke</groupId>
    <artifactId>kie-wb-smoke-tests</artifactId>
    <version>7.0.0-SNAPSHOT</version>
  </parent>

  <artifactId>kie-wb-smoke-tests-arq</artifactId>

  <name>KIE (Drools) Workbench Smoke Tests :: Arquillian</name>
  <description>Arquillian Integration smoke tests for KIE Workbench and KIE Drools Workbench</description>

  <properties>
    <!-- TODO: neither the wildfly 8 or 10 profiles work fully yet -->
    <skipITs>true</skipITs>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.jboss.arquillian.container</groupId>
        <artifactId>arquillian-tomcat-managed-7</artifactId>
        <version>1.0.0.CR7</version>
      </dependency>

    </dependencies>
  </dependencyManagement>

  <dependencies>
    <dependency>
      <groupId>org.kie.smoke</groupId>
      <artifactId>kie-wb-smoke-tests-main</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.kie.smoke</groupId>
      <artifactId>kie-wb-smoke-tests-main</artifactId>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>

    <!--  kie -->
    <dependency>
      <groupId>org.kie</groupId>
      <artifactId>kie-api</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jbpm</groupId>
      <artifactId>jbpm-kie-services</artifactId>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <groupId>org.kie</groupId>
          <artifactId>kie-ci</artifactId>
        </exclusion>
        <exclusion>
          <artifactId>aether-api</artifactId>
          <groupId>org.eclipse.aether</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.kie.remote</groupId>
      <artifactId>kie-remote-client</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.guvnor</groupId>
      <artifactId>guvnor-rest-client</artifactId>
      <scope>test</scope>
    </dependency>

    <!--  general -->
    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>commons-net</groupId>
      <artifactId>commons-net</artifactId>
      <scope>test</scope>
    </dependency>

    <!-- utilities -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <scope>test</scope>
    </dependency>

    <!-- REST -->
    <dependency>
      <groupId>org.jboss.resteasy</groupId>
      <artifactId>jaxrs-api</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jboss.resteasy</groupId>
      <artifactId>resteasy-jackson-provider</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jboss.resteasy</groupId>
      <artifactId>resteasy-jaxb-provider</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>logback-classic</artifactId>
      <scope>test</scope>
    </dependency>

    <!-- arquillian -->
    <dependency>
      <groupId>org.jboss.arquillian.junit</groupId>
      <artifactId>arquillian-junit-container</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jboss.shrinkwrap</groupId>
      <artifactId>shrinkwrap-api</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jboss.shrinkwrap.resolver</groupId>
      <artifactId>shrinkwrap-resolver-api-maven</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jboss.shrinkwrap.resolver</groupId>
      <artifactId>shrinkwrap-resolver-spi</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.jboss.shrinkwrap.resolver</groupId>
      <artifactId>shrinkwrap-resolver-impl-maven</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <testResources>
      <testResource>
        <directory>src/test/resources</directory>
        <filtering>false</filtering>
      </testResource>
      <testResource>
        <directory>src/test/filtered-resources</directory>
        <filtering>true</filtering>
      </testResource>
      <!-- Going outside the module directory is not good practice, but in this case we are not relying on
           build artifacts, but rather comitted resources, which are supposed to be always there. This also
           means we can have the resources only at one place (the other module) without the need to duplicate them. -->
      <testResource>
        <directory>${project.basedir}/../kie-wb-smoke-tests-main/src/test/resources</directory>
        <filtering>false</filtering>
      </testResource>
      <testResource>
        <directory>${project.basedir}/../kie-wb-smoke-tests-main/src/test/filtered-resources</directory>
        <filtering>true</filtering>
      </testResource>
    </testResources>

    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-clean-plugin</artifactId>
          <configuration>
            <filesets>
              <fileset>
                <directory>${basedir}</directory>
                <includes>
                  <include>repositories/</include>
                  <include>.niogit/</include>
                  <include>.index/</include>
                </includes>
              </fileset>
            </filesets>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <profiles>
    <profile>
      <id>kie-drools-wb</id>
      <properties>
        <deployable.groupId>org.kie</deployable.groupId>
        <deployable.artifactId>kie-drools-wb-distribution-wars</deployable.artifactId>
        <deployable.context>kie-drools-wb</deployable.context>
      </properties>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-failsafe-plugin</artifactId>
              <configuration>
                <groups>KieDroolsWbSmoke</groups>
              </configuration>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
    </profile>

    <profile>
      <id>kie-wb</id>
      <activation>
        <property>
          <name>full</name>
        </property>
      </activation>
      <properties>
        <deployable.groupId>org.kie</deployable.groupId>
        <deployable.artifactId>kie-wb-distribution-wars</deployable.artifactId>
        <deployable.context>kie-wb</deployable.context>
      </properties>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-failsafe-plugin</artifactId>
              <configuration>
                <groups>KieWbSmoke</groups>
              </configuration>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
    </profile>

    <profile>
      <id>arquillian-wildfly10x</id>

      <properties>
        <wildfly.server.name>wildfly-${version.wildfly10}</wildfly.server.name>
        <deployable.classifier>${wildfly10.deployable.classifier}</deployable.classifier>

        <arquillian.launch>wildfly</arquillian.launch>
      </properties>

      <dependencies>
        <!-- wars -->
        <dependency>
          <groupId>org.kie</groupId>
          <artifactId>kie-wb-distribution-wars</artifactId>
          <classifier>${wildfly10.deployable.classifier}</classifier>
          <type>war</type>
        </dependency>
        <dependency>
          <groupId>org.kie</groupId>
          <artifactId>kie-drools-wb-distribution-wars</artifactId>
          <classifier>${wildfly10.deployable.classifier}</classifier>
          <type>war</type>
        </dependency>

        <!-- arquillian wildfly -->
        <dependency>
          <groupId>org.wildfly</groupId>
          <artifactId>wildfly-arquillian-container-managed</artifactId>
          <scope>test</scope>
        </dependency>

        <!-- server -->
        <dependency>
          <groupId>org.wildfly</groupId>
          <artifactId>wildfly-dist</artifactId>
          <type>zip</type>
        </dependency>
      </dependencies>

      <dependencyManagement>
        <dependencies>
          <dependency>
            <groupId>org.wildfly</groupId>
            <artifactId>wildfly-dist</artifactId>
            <version>${version.wildfly10}</version>
            <scope>test</scope>
            <type>zip</type>
          </dependency>
          <dependency>
            <groupId>org.wildfly</groupId>
            <artifactId>wildfly-arquillian-container-managed</artifactId>
            <version>${version.wildfly10}</version>
            <scope>test</scope>
          </dependency>
        </dependencies>
      </dependencyManagement>

      <build>
        <!-- running tests -->
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>reserve-network-ports</id>
                <goals>
                  <goal>reserve-network-port</goal>
                </goals>
                <phase>initialize</phase>
                <configuration>
                  <portNames>
                    <portName>wildfly.server.port</portName>
                    <portName>wildfly.mgmt.server.port</portName>
                  </portNames>
                  <outputFile>src/test/resources/port.properties</outputFile>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <!-- test configuration -->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <systemPropertyVariables>
                <jboss.server.port>${wildfly.server.port}</jboss.server.port>
                <jboss.mgmt.server.port>${wildfly.mgmt.server.port}</jboss.mgmt.server.port>
              </systemPropertyVariables>
            </configuration>
          </plugin>

          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-failsafe-plugin</artifactId>
            <configuration>
              <argLine>-Xms512m -Xmx1024m</argLine>
              <systemPropertyVariables>
                <jboss.server.port>${wildfly.server.port}</jboss.server.port>
                <jboss.mgmt.server.port>${wildfly.mgmt.server.port}</jboss.mgmt.server.port>
                <arquillian.launch>wildfly10</arquillian.launch>
              </systemPropertyVariables>
            </configuration>
          </plugin>

          <!-- 1. install server in the build/target dir -->
          <plugin>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>unpack-wildfly-10</id>
                <phase>generate-test-resources</phase>
                <goals>
                  <goal>unpack</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>org.wildfly</groupId>
                      <artifactId>wildfly-dist</artifactId>
                      <version>${version.wildfly10}</version>
                      <type>zip</type>
                      <overWrite>false</overWrite>
                      <outputDirectory>${project.build.directory}</outputDirectory>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
              <execution>
                <id>get-wildfly-10-kie-wb-war</id>
                <phase>generate-test-resources</phase>
                <goals>
                  <goal>copy</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>org.kie</groupId>
                      <artifactId>kie-wb-distribution-wars</artifactId>
                      <classifier>${wildfly10.deployable.classifier}</classifier>
                      <type>war</type>
                      <overWrite>false</overWrite>
                    </artifactItem>
                  </artifactItems>
                  <outputDirectory>${project.build.directory}/wars</outputDirectory>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <!-- 2. install files with user/password information in the server dir -->
          <plugin>
            <artifactId>maven-resources-plugin</artifactId>
            <executions>
              <execution>
                <id>copy-user-config</id>
                <phase>process-test-resources</phase>
                <goals>
                  <goal>copy-resources</goal>
                </goals>
                <configuration>
                  <outputDirectory>${project.build.directory}/${wildfly.server.name}/standalone/configuration</outputDirectory>
                  <resources>
                    <resource>
                      <directory>${project.basedir}/../kie-wb-smoke-tests-main/src/test/resources/eap-wildfly-shared/config</directory>
                      <filtering>false</filtering>
                    </resource>
                  </resources>
                  <overwrite>true</overwrite>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <!-- 3. modify server configuration -->
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>xml-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>modify-standalone-full</id>
                <phase>process-test-resources</phase>
                <goals>
                  <goal>transform</goal>
                </goals>
                <configuration>
                  <transformationSets>
                    <transformationSet>
                      <dir>${project.build.directory}/${wildfly.server.name}/standalone/configuration</dir>
                      <outputDir>${project.build.directory}/${wildfly.server.name}/standalone/configuration</outputDir>
                      <includes>
                        <include>standalone-full.xml</include>
                      </includes>
                      <stylesheet>${project.basedir}/../kie-wb-smoke-tests-main/src/test/resources/wildfly10/xslt/addDebugLogging.xslt</stylesheet>
                    </transformationSet>
                    <transformationSet>
                      <dir>${project.build.directory}/${wildfly.server.name}/standalone/configuration</dir>
                      <outputDir>${project.build.directory}/${wildfly.server.name}/standalone/configuration</outputDir>
                      <includes>
                        <include>standalone-full.xml</include>
                      </includes>
                      <stylesheet>${project.basedir}/../kie-wb-smoke-tests-main/src/test/resources/wildfly10/xslt/changeJmsMessagingConfig.xslt</stylesheet>
                    </transformationSet>
                  </transformationSets>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

  </profiles>

</project>
